# Session and Database Configuration
SESSION_SECRET="your-session-secret-here"
DATABASE_URL="your-postgresql-database-url"
PGDATABASE="your-database-name"
PGHOST="your-database-host"
PGPORT="5432"
PGUSER="your-database-user"
PGPASSWORD="your-database-password"

# Firebase Configuration
VITE_FIREBASE_API_KEY="your-firebase-api-key"
VITE_FIREBASE_APP_ID="your-firebase-app-id"
VITE_FIREBASE_PROJECT_ID="your-firebase-project-id"

# Application Configuration
NODE_ENV=development
PORT=5000

# Cloudinary Configuration (Add these via Replit Secrets)
# CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
# CLOUDINARY_API_KEY=your-cloudinary-api-key
# CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Optional: Additional Cloudinary Providers for Multi-Cloud Setup
# CLOUDINARY_CLOUD_NAME_2=your-second-cloudinary-cloud-name
# CLOUDINARY_API_KEY_2=your-second-cloudinary-api-key
# CLOUDINARY_API_SECRET_2=your-second-cloudinary-api-secret

# CLOUDINARY_CLOUD_NAME_3=your-third-cloudinary-cloud-name
# CLOUDINARY_API_KEY_3=your-third-cloudinary-api-key
# CLOUDINARY_API_SECRET_3=your-third-cloudinary-api-secret

# Bandwidth Optimization (Cache System)
CACHE_ENABLED=true
MAX_CACHE_SIZE=500
CACHE_DURATION=24